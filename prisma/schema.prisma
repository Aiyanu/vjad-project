generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id           String  @id @default(uuid())
  email        String  @unique
  passwordHash String
  fullName     String?

  role Role @default(affiliate)

  phone         String?

  // ─── Affiliate profile (optional) ───
  affiliate   Affiliate?

  // ─── Auth / Security ───
  emailVerified Boolean   @default(false)
  verificationToken String?
  verificationTokenExp DateTime?
  isDisabled Boolean @default(false)

  // ─── Metadata ───
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@index([verificationToken])
}

model Affiliate {
  id            String   @id @default(uuid())
  userId        String   @unique
  user          User     @relation(fields: [userId], references: [id])
  bankName      String?
  bankCode      String?
  accountNumber String?
  accountName   String?
  referralCode  String?  @unique
  referrerId    String?
  referrer      Affiliate? @relation("AffiliateReferrals", fields: [referrerId], references: [id])
  referrals     Affiliate[] @relation("AffiliateReferrals")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([referrerId])
}

enum Role {
  affiliate
  admin
  super_admin
}
